{% extends 'app/base.html.twig' %}

{% block title %}Epilepc - {% trans %}Tagebucheintrag bearbeiten{% endtrans %}{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="mb-5">
    <div class="text-center">
        <h1 class="h3 text-gray-800 justify-content-center border-bottom pb-2 mb-2">{% trans %}Tagebucheintrag{% endtrans %} #{{ diaryentry.id }} {% trans %}bearbeiten{% endtrans %}</h1>
    </div>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">

                {{ include('app/diaryentry/_form.html.twig', {'button_text': 'Updaten'|trans}) }}
                <br/>
                <div class="form-group text-center">

                    <form method="post" action="{{ path('diaryentry_delete', {'id': diaryentry.id}) }}" onsubmit="return confirm('{% trans %}Bist du sicher, dass du diesen Tagebucheintrag löschen willst?{% endtrans %}');">
                        <input type="hidden" name="_method" value="DELETE">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ diaryentry.id) }}">
                        <a class="btn btn-dark" href="{{ path('diaryentry_index') }}">{% trans %}Zurück zur Übersicht{% endtrans %}</a>
                        <button class="btn btn-danger">{% trans %}Tagebucheintrag löschen{% endtrans %}</button>
                    </form>
                </div>


            </div>
        </div>
    </div>
{% endblock %}
