{% extends 'app/base.html.twig' %}

{% block body %}
    <!-- Page Heading -->
    <div class="mb-5">
        <div class="text-center">
            <h1 class="h3 text-gray-800 justify-content-center border-bottom pb-2 mb-2">Tagebuchübersicht</h1>
            <p class="mb-4">Untenstehend findest du alle deine erfassten Tagebucheinträge. <br />Zusätzlich kannst du auf das Pluszeichen <i class="fas fa-plus-circle"></i> klicken, um einen neuen Tagebucheintrag zu erstellen</p>

            <a href="{{ path('diaryentry_new') }}" title="Neuer Tagebucheintrag erstellen"><i class="fas fa-plus-circle fa-3x text-diary"></i></a>
        </div>
    </div>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-diary">Erfasste Tagebucheinträge</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" data-sort-name="date" data-sort-order="asc">
                    <thead>
                    <tr>
                        <th>Eintragstitel</th>
                        <th>Eintragsdatum</th>
                        <th>Zuletzt bearbeitet</th>
                        <th>Aktionen</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for diaryentry in diaryentries %}
                        <tr>
                            <td><a href="{{ path('diaryentry_show', {'id': diaryentry.id}) }}" class="text-diary" title="Anzeigen"><i class="fas fa-fw fa-search"></i> {{ diaryentry.title }}</a></td>
                            <td>{{ diaryentry.timestampWhen ? diaryentry.timestampWhen|date('d.m.Y') : '' }}</td>
                            <td>{{ diaryentry.modifiedAt ? diaryentry.modifiedAt|date('d.m.Y H:i') : '' }} Uhr</td>
                            <td align="center">
                                <a href="{{ path('diaryentry_edit', {'id': diaryentry.id}) }}" title="Bearbeiten" class="text-diary"><i class="fas fa-fw fa-edit"></i></a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">Keine Tagebucheinträge vorhanden</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    <!-- Bootstrap core JavaScript-->
    <script src="{{ asset('application/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('application/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.8.0/js/bootstrap-datepicker.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="{{ asset('application/vendor/jquery-easing/jquery.easing.min.js') }}"></script>
    <!-- Custom scripts for all pages-->
    <script src="{{ asset('application/js/sb-admin-2.js') }}"></script>
    <script src="{{ asset('application/vendor/datatables/jquery.dataTables.js') }}"></script>
    <script src="{{ asset('application/vendor/datatables/dataTables.bootstrap4.js') }}"></script>
{% endblock %}

{% block zusStylesheets %}
    <link href="{{ asset('application/vendor/datatables/dataTables.bootstrap4.css') }}" rel="stylesheet">
{% endblock %}

{% block jsCharts %}
    // Call the dataTables jQuery plugin
    $(document).ready(function() {
    $('#dataTable').DataTable( {
    "language": {
    "url": "//cdn.datatables.net/plug-ins/1.10.19/i18n/German.json"
    }
    });
    });

{% endblock %}