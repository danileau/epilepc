                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Registriere dich jetzt!</h1>
                </div>

                {{ form_start(registrationForm, {
                    attr: { class: 'user' }
                }) }}
                <div class="form-group row">
                    <div class="col-sm-6 mb-3 mb-sm-0">
                        {{ form_row(registrationForm.firstname, {
                            attr: { class: 'form-control-user', placeholder: 'Vorname'}
                        }) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_row(registrationForm.lastname, {
                            attr: { class: 'form-control-user', placeholder: 'Nachname'}
                        }) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.email, {
                        attr: { class: 'form-control-user', placeholder: 'Email-Adresse'}
                    }) }}
                </div>
                <div class="form-group">
                    {{ form_row(registrationForm.plainPassword, {
                        attr: { class: 'form-control-user', placeholder: 'Passwort'}
                    }) }}
                </div>

                {{ form_row(registrationForm.agreeTerms) }}


                    <button type="submit" class="btn btn-primary btn-user btn-block">Account erstellen</button>
