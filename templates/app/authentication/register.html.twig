{% extends 'app/authentication/base.html.twig' %}
{% form_theme registrationForm _self %}

{% block title %}Epilepc - Registrieren{% endblock %}

{%- block form_row -%}
    {%- set widget_attr = {} -%}
    {%- if help is not empty -%}
        {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
    {%- endif -%}

    {#{{- form_label(form) -}}#}
    {{- form_errors(form) -}}
    {{- form_widget(form, widget_attr) -}}
    {{- form_help(form) -}}

{%- endblock form_row -%}

{% block _user_registration_form_agreeTerms_row %}
    <div class="form-group">
        <div class="custom-control custom-checkbox small">
            {{ form_errors(form) }}
            <input type="checkbox" name="{{ full_name }}" class="custom-control-input" id="customCheck">
            <label class="custom-control-label" for="customCheck">Ich stimme den <a href="#">Nutzungsbedingungen</a> von epilepc.ch zu</label>
        </div>
    </div>
{% endblock %}

