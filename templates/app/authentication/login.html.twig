{% extends 'app/authentication/base.html.twig' %}

{% block body %}
    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
        <div class="col-lg-6">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Willkommen zurück!</h1>
                </div>
                <form class="user">
                    <div class="form-group">
                        <input type="email" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Email Adresse">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control form-control-user" id="exampleInputPassword" placeholder="Passwort">
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox small">
                            <input type="checkbox" class="custom-control-input" id="customCheck">
                            <label class="custom-control-label" for="customCheck">Eingeloggt bleiben</label>
                        </div>
                    </div>
                    <a href="index.html" class="btn btn-primary btn-user btn-block">
                        Login
                    </a>
                </form>
                <hr>
                <div class="text-center">
                    <a class="small" href="{{ path('app_forgot') }}">Passwort vergessen?</a>
                </div>
                <div class="text-center">
                    <a class="small" href="{{ path('app_register') }}">Registriere dich!</a>
                </div>
                <br />
                <div class="text-center">
                    <a class="small" href="{{ path('app_landingpage') }}">Zurück</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}