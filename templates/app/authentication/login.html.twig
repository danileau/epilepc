{% extends 'app/authentication/base.html.twig' %}

{% block title %}Epilepc - Login{% endblock %}
{% block body %}
    <!-- Nested Row within Card Body -->
    <div class="row">
        <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
        <div class="col-lg-6">
            <div class="p-5">
                <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Willkommen zurück!</h1>
                </div>

                <form class="user" method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <div class="form-group">
                        <input type="email" class="form-control form-control-user" value="{{ last_username }}" name="email" id="inputEmail" aria-describedby="emailHelp" placeholder="Email Adresse" required autofocus>
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control form-control-user" name="password" id="inputPassword" placeholder="Passwort">
                    </div>
                    <input type="hidden" name="_csrf_token"
                           value="{{ csrf_token('authenticate') }}"
                    >
                    <input type="hidden" name="_target_path" value="{{ path('app_dashboard') }}"/>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox small">
                            <input type="checkbox" name="_remember_me" class="custom-control-input" id="customCheck">
                            <label class="custom-control-label" for="customCheck">Eingeloggt bleiben</label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-user btn-block">Login</button>
                </form>
                <hr>
                <div class="text-center">
                    <a class="small" href="{{ path('app_register') }}">Jetzt registrieren!</a>
                </div>
                <div class="text-center">
                    <a class="small" href="{{ path('app_forgot-password') }}">Passwort vergessen</a>
                </div>
                <br />
                <div class="text-center">
                    <a class="small" href="{{ path('app_landingpage') }}">Zurück</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}