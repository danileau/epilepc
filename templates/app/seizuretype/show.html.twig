{% extends 'app/base.html.twig' %}

{% block title %}Epilepc - Anfallsart anzeigen{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="mb-5">
    <div class="text-center">
        <h1 class="h3 text-gray-800 justify-content-center border-bottom pb-2 mb-2">Anfallsart #{{ seizuretyp.id }} anzeigen</h1>
    </div>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive p-1">
                <form>
                    <div class="form-group">
                        <label for="SeizureTitle">Anfallstitel</label>
                        <input type="text" class="form-control" id="SeizuretypeTitle" value="{{ seizuretyp.name }}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="SeizureDescription">Beschreibung</label>
                        <textarea class="form-control" id="SeizuretypeDescription" readonly rows="4">{{ seizuretyp.description }}</textarea>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-primary"><a style="color: #FFFFFF" href="{{ path('seizuretype_edit', {'id': seizuretyp.id}) }}">Bearbeiten</a></button>
                    </div>

                </form>

            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker').datetimepicker({
                locale: 'de'
            });
        });
    </script>
{% endblock %}