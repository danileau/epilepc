{% extends 'app/base.html.twig' %}

{% block title %}epilepc - Anfall #{{ seizure.id }} anzeigen{% endblock %}

{% block body %}
    <!-- Page Heading -->
    <div class="mb-5">
        <div class="text-center">
            <h1 class="h3 text-gray-800 justify-content-center border-bottom pb-2 mb-2">Anfall #{{ seizure.id }} anzeigen</h1>
        </div>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive p-1">
                <form>
                    <div class="form-group">
                        <label for="SeizureTitle">Anfallstitel</label>
                        <input type="text" class="form-control" id="SeizureTitle" value="{{ seizure.title }}" readonly>
                    </div>
                    <div class="form-group">
                        <label for="SeizureDescription">Beschreibung</label>
                        <textarea class="form-control" id="SeizureDescription" readonly rows="4">{{ seizure.description }}</textarea>
                    </div>
                    <div class="form-group">
                        <label for="SeizureDate">Anfallsdatum</label>
                        <input type="text" class="form-control" id="SeizureDate" value="{{ seizure.timestampWhen ? seizure.timestampWhen|date('d.m.Y H:i') : '' }} Uhr" readonly>
                    </div>
                    <div class="form-group">
                        <label for="SeizureDate">Zuletzt bearbeitet</label>
                        <input type="text" class="form-control" id="SeizureDate" value="{{ seizure.modifiedAt ? seizure.modifiedAt|date('d.m.Y H:i') : '' }} Uhr" readonly>
                    </div>
                    <div class="form-group">
                        <label for="SeizureDate">Anfallstyp</label>
                        <input type="text" class="form-control" id="SeizureDate" value="{{ seizure.seizuretype.name }}" readonly>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn btn-primary"><a style="color: #FFFFFF" href="{{ path('seizure_edit', {'id': seizure.id}) }}">Bearbeiten</a></button>
                    </div>

                </form>

            </div>
        </div>
    </div>
    <script type="text/javascript">
        $(function () {
            $('#datetimepicker').datetimepicker({
                locale: 'de'
            });
        });
    </script>
{% endblock %}